<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	metadata-complete="true">
  
  <context-param>  
    <description>Default resources uri prefix (default value is only for integration testing)</description>  
    <param-name>RESOURCES_PREFIX</param-name>  
    <param-value>CHANGE ME</param-value>  
  </context-param>


	<!-- It is important to distinguish between 'raw' content (RESOURCES_PREFIX) from data processed and by
		 enriched by the servlets themselves.
		 For example, in the default maven jetty configuration:
		 	[/morfeu/documents/]test-resources/documents/document1.json will invoke the servlet and then the 
	 	 servlet will go and fetch the raw data from 
	 	 	[RESOURCES_PREFIX]test-resources/documents/document1.json
	 	 then it will process it and enrich it in any way necessary. Usually the content will be a superset of
	 	 the raw data. -->

	<!-- Documents -->
	<servlet>
    	<display-name>document-servlet</display-name>
    	<servlet-name>DocumentsServlet</servlet-name>
   		<servlet-class>cat.calidos.morfeu.webapp.DocumentsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>DocumentsServlet</servlet-name>
    	<url-pattern>/documents/*</url-pattern>
  	</servlet-mapping>
	
	
	<!-- Models -->
	<servlet>
    	<display-name>model-servlet</display-name>
    	<servlet-name>ModelsServlet</servlet-name>
   		<servlet-class>cat.calidos.morfeu.webapp.ModelsServlet</servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>ModelsServlet</servlet-name>
    	<url-pattern>/models/*</url-pattern>
  	</servlet-mapping>
	
	<!-- Content -->
	<servlet>
    	<display-name>content-servlet</display-name>
    	<servlet-name>ContentServlet</servlet-name>
   		<servlet-class>cat.calidos.morfeu.webapp.ContentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
    	<servlet-name>ContentServlet</servlet-name>
    	<url-pattern>/content/*</url-pattern>
  	</servlet-mapping>
	
</web-app>
