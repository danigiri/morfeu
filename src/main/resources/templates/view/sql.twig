<div class="card"> 
	<div class="card-body html-preview" style="background-color: grey"> 
{%- if problem != null -%}
		<div class="alert alert-danger" role="alert">{{problem}}</div>"
{%- elseif v.isUpdate -%}"

{%- else -%}
		<div>
			<table class="table table-sm">
				{%- for r in v.results -%}
				{%- if (loop.first) -%}
				<thead>
					<tr>
						{%- for c in r %}<th scope="col">{{c}}</ht>{% endfor -%}
					</tr>
				</thead>
				 {%- else -%}
				<tr>
					{%- for c in r %}<td>{{c}}</td>{% endfor -%}
				</tr>
				{%- endif -%}
				{%- endfor -%}
			</table>
		</div>
{%- endif -%} 
	</div> 
</div>